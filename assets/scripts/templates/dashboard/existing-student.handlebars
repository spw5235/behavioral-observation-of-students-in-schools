<div class="existing-student-selection-container">

  <div class="row">
    <div class="col-xs-12 col-xs-offset-0 col-sm-offset-1 col-sm-10">
      <h1>Student Selection</h1>
      <p>Please select the student whom you will be observing.</p>
      <table class="table existing-student-selection-table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th class="hidden-xs hidden-sm">DOB</th>
            <th class="hidden-sm hidden-xs">School</th>
            <th class="hidden-xs">Teacher</th>
            <th>Grade</th>
            <th>Session Target</th>
          </tr>
        </thead>
        <tbody>
          {{#each students as |student|}}
            <tr>
              <td class="display-student-fn">
                {{student.first_name}} {{student.last_name}}
              </td>
              <td class="display-student-dob hidden-xs hidden-sm">
                {{student.born_on}}
              </td>
              <td class="display-student-school hidden-sm hidden-xs">
                {{student.school}}
              </td>
              <td class="display-student-teacher hidden-xs">
                {{student.teacher}}
              </td>
              <td class="display-student-grade">
                {{student.grade}}
              </td>
              <td class="display-obs-obs-comment">
                <input class="btn btn-info btn-sm dashboard-existing-create-btn" type="button" value="Select Student" data-current-student-id="{{student.id}}">
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="dashboard-container well">
        <button id="dashboard-home-btn" type="button" class="btn btn-primary">View Students</button>
      </div>
    </div>
  </div>
</div>
