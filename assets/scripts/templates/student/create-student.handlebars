<div class="container create-student-form-container form-container form-group">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-md-9 col-lg-8">
      <h1>Create Student Form</h1>
      <form class="form student-form" id="new-student-form" name="new-student-form">
        <fieldset>
          <p id="create-student-error"></p>
          <p>All fields are <u>optional</u> unless otherwise indicated</p>

          <div class="form-group fn-field-container">
            <label>First Name (required)</label>
            <div class="fn-field-notification"></div>
            <input class="form-control required-field fn-required" name="student[first_name]" placeholder="First Name" type="text">
          </div>

          <div class="form-group ln-field-container">
            <label>Last Name (required)</label>
            <div class="ln-field-notification"></div>
            <input class="form-control required-field ln-required" name="student[last_name]" placeholder="Last Name" type="text">
          </div>

          <div class="form-group">
            <label>Date of Birth</label>
            <input class="form-control" name="student[born_on]" placeholder="Date of Birth" type="date">
          </div>

          <div class="form-group">
            <label>School</label>
            <input class="form-control" name="student[school]" placeholder="School" type="text">
          </div>

          <div class="form-group">
            <label>Teacher</label>
            <input class="form-control" name="student[teacher]" placeholder="Teacher" type="text">
          </div>

          <div class="form-group">
            <label>Grade</label>
            <input class="form-control required-field" name="student[grade]" placeholder="Grade" type="text">
          </div>

          <div class="form-group submit-btn-container">
            <input class="btn btn-success submit-btn current" name="submit" id="create-student-btn" type="submit" value="Submit">
            <button class="btn btn-danger submit-btn current student-cancel-btn" data-current-student-id="0">Cancel</button>
          </div>
        </fieldset>
      </form>
      <div class="dashboard-container well">
        <button id="dashboard-home-btn" type="button" class="btn btn-primary">View Students</button>
      </div>
    </div>
  </div>
</div>
