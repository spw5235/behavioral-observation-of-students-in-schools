<div class="container">

  <div class="row">
    <div class="col-xs-12 col-lg-11">
      <h1>Student Records</h1>
      <table class="table student-summary-table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th class="hidden-xs">DOB</th>
            <th class="hidden-sm hidden-xs">School</th>
            <th class="hidden-xs">Teacher</th>
            <th>Grade</th>
            <th>View Record</th>
          </tr>
        </thead>
        <tbody>
          {{#each students as |student|}}
            <tr>
              <td class="display-student-fn">
                {{student.first_name}} {{student.last_name}}
              </td>
              <td class="display-student-dob hidden-xs">
                {{student.born_on}}
              </td>
              <td class="display-student-school hidden-sm hidden-xs">
                {{student.school}}
              </td>
              <td class="display-student-teacher hidden-xs">
                {{student.teacher}}
              </td>
              <td class="display-student-grade">
                {{student.grade}}
              </td>
              <td class="display-student-submit">
                <button type="button" class="btn btn-info btn-sm dashboard-student-record-btn" data-current-student-id="{{student.id}}">View Student</button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="dashboard-container well">
        <button id="new-session-new-student" type="button" class="btn btn-primary">Create Student</button>
        <button id="dashboard-new-session-btn" type="button" class="btn btn-info">Create Session</button>
      </div>
    </div>
  </div>
</div>
